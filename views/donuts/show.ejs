<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <title>Donut Menu</title>
    <script src="https://code.jquery.com/jquery-2.2.3.js" integrity="sha256-laXWtGydpwqJ8JA+X9x2miwmaiKhn8tVmOVEigRNtP4=" crossorigin="anonymous"></script>
    <script type="text/javascript" src="https://cdnjs.cloudflare.com/ajax/libs/semantic-ui/2.1.8/semantic.js"></script>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/semantic-ui/2.1.8/semantic.css">
  </head>
  <body>
    <h1>Donut Menu</h1>
    <a href='/donuts/new'>Add new Donut</a>
    <% donuts.forEach((donut) => { %>
    <a href="donuts/<%=donut.id%>"><h3><%=donut.name.charAt(0).toUpperCase()+donut.name.substring(1)%> Donut</h3></a>
    <form action='/donuts?_method=DELETE' method='post'>
      <input type='submit' value='x' name='d<%=donut.id%>'>
    </form>
    <ul>
      <li> Topping: <%= donut.topping %></li>
      <li> Price: $<%= donut.price %>.00</li>
    </ul>
    <% }); %>
    <a href="/">Back to Home</a>
  </body>
</html>
